# URLs
APP_URL=http://localhost:3000
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:4000
BASE_URL=http://localhost:4000
PORT=4000
NODE_ENV=development
APP_NAME=Apartman Service
TIMEZONE=Europe/Podgorica

# Mongo
MONGO_URL=mongodb://127.0.0.1:27017
MONGO_DB_NAME=apartmani

# JWT
JWT_SECRET=replace_me_long_random
JWT_ISSUER=apartmani.api
JWT_AUDIENCE=apartmani.web
ACCESS_TOKEN_TTL=10m
REFRESH_TOKEN_TTL=30d
REFRESH_ROTATION=true
REFRESH_REUSE_DETECT=true

# Cookies / CORS
CORS_ORIGIN=http://localhost:3000
COOKIE_SECURE=false
COOKIE_SAMESITE=Lax
COOKIE_DOMAIN=localhost

# Admin bootstrap
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=strong-password

# SMTP / Mail
SMTP_HOST=smtp.gmail.com
SMTP_PORT=465
SMTP_USER=your@gmail.com
SMTP_PASS=app_password_here
MAIL_FROM="Apartman Service" <your@gmail.com>
MAIL_REPLY_TO=reply@example.com
SMTP_SECURE=true
MAIL_TEMPLATES_DIR=src/templates/email

# OAuth (postavi svoje)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT=http://localhost:4000/api/auth/oauth/google/callback
FACEBOOK_CLIENT_ID=
FACEBOOK_CLIENT_SECRET=
FACEBOOK_REDIRECT=http://localhost:4000/api/auth/oauth/facebook/callback

# Security & limits
TOTP_ISSUER=Apartmani
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=10
SECURITY_HEADERS=enabled

# Observability
LOG_LEVEL=info
REQUEST_ID_HEADER=x-request-id
